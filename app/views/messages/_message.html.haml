.content{data: {id: message.id}}
  .content__upper-info
    .content__upper-info--user-name
      = message.user.name
    .content__upper-info--date
      = message.created_at.strftime("%Y/%m/%d(%a) %X")
  .content--body
    -if message.content.present?
      %p.message__text
        = message.content
    - if message.image.present?
      = image_tag message.image.url